<!DOCTYPE html>
<html>
    <head>
        <meta charset="{{site.charset}}">
        <title>{{site.title}}</title>
        <meta name="description" content="{{site.description}}">
        <link rel="stylesheet" href="{{site.url}}/assets/app.bundle.css">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta property="og:url" content="{{current_url}}" />
        <meta property="og:type" content="{% block og_type %}website{% endblock %}" />
        <meta property="og:title" content="{% block og_title %}{{site.title}}{% endblock %}" />
        <meta property="og:description" content="{% block og_description %}{{site.description}}{% endblock %}" />
        <meta property="og:image" content="{% block og_image %}{% endblock %}" />
    </head>
    <body>
        {% include 'menu/main.twig' with {menu: menu['main-menu']} %}

        {% block content %}
        There is no content here :(
        {% endblock %}
    </body>
</html>
